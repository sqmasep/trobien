@media screen and (max-width: sm) 
    .presentation__section
        &:nth-child(even) 
            .presentation__box
                text-align left
    .quote
        display none

    .contact
        grid-template-columns 1fr
        &__form
            display flex
            flex-direction column

    .presentation
        &__section
            grid-template-columns 1fr